<div class = "container">

  <div class="jumbotron">
    <h1> Order your Burger Here!</h1>
    <p>Burger Orders, pick-up</p>
    <br>
    <h2>Choose a burger or sandwich</h2>
    <panel>
      <form class= "create-form">
        <div class="form-group">
          <label for="newBurger">Order New Burger!</label>
          <input type="text" id="newBurger" name="burger">
          <button type="submit" class="btn btn-success" id="addburger">
            <span class="liked it"></span>
          </button>
        </div>
      </form>
    </panel>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel">
        <div class="panel-head" id="leftside"><strong>Order A Burger</strong></div>
        <div class="panel-body">
          
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                 <button type="button" class="eat-burger" id="eatbutton" data-id="{{this.id}}" data-newDevoured={{devour}}><span class="eat-burger"></span></button> 
              {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel">
        <div class="panel-head" id="rightside"><strong>Devour A Burger</strong></div>
        <div class="panel-body">
          
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="dump-burger" id="trashbutton" data-id="{{this.id}}" data-newDevoured={{devour}}><span class="dump-burger"></span></button>
              {{/if}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>